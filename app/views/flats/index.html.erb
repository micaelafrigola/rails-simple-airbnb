<div class="container">
<p style="color: green"><%= notice %></p>

<h1>Flats</h1>

<div id="flats" class="row">
  <% @flats.each do |flat| %>
    <div class="col-md-4 mb-4">
      <div class="card">
      <img src="<%= flat.image%>" class="card-img-top" alt="Image">
        <div class="card-body">
          <h5 class="card-title"><%= flat.name %></h5>
          <p class="card-text">Address: <%= flat.address %></p>
          <p class="card-text"><%= flat.description %></p>
          <p class="card-text">
          Price per night: <i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %></p>
          <p class="card-text">
            Number of guests: <i class="fa-solid fa-user-group"></i> <%= flat.number_of_guests %>
          </p>
          <p>
            <%= link_to "More info", flat %>
          </p>
          <p>
            <%=link_to "Edit this flat", edit_flat_path(flat) %>
          </p>
          <p>
          <%= button_to "Delete this flat", flat, method: :delete %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>


<%= link_to "New flat", new_flat_path, class: "btn btn-success" %>

</div>
